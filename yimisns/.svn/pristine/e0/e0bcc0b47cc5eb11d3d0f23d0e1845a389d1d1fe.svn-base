<script type="text/javascript">
//提交
function push_text(){
	$.messager.progress();
	$.post('{:U('Push/pushtext')}', $("#msgForm").serialize(), function(data){
		if(!data.status){
			$.messager.progress('close');
			$.messager.alert('提示信息', data.info, 'error');
		}else{
			$.messager.progress('close');
			pushRefresh();
			$.messager.alert('提示信息', data.info, 'info');
			$('#sendtextBox').dialog('close');
		}
	})
}


</script>
